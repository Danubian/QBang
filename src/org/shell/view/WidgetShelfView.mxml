<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  width="90%" 
		  height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<!-- Fills the background with a rectangle-->
	<s:Rect height="100%" 
			width="100%" 
			id="colorCanvas">
		<s:stroke>
			<s:SolidColorStroke id="stroke" 
								color="#000000" 
								weight="2" 
								alpha="1"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor id="fill"
						  color="#000000"
						  alpha="1"/>
		</s:fill>
	</s:Rect>
	
	<s:TileGroup id="tiles"
				 width="100%"
				 height="100%"
				 requestedColumnCount="2">
		<s:Button id="b1"
				  label="Button 1"
				  width="100%"/>
		<s:Button id="b2"
				  label="Button 2"/>
		<s:Button id="b3"
				  label="Button 3"/>
		<s:Button id="b4"
				  label="Button 4"/>
	</s:TileGroup>
</s:Module>
