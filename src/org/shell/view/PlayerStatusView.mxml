<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  implements="org.common.interfaces.IPlayerStatusModule"
		  width="100%" 
		  height="200" 
		  xmlns:base="org.common.base.*"
		  preinitialize="onPreInitialize()">
	
	<!--
	<s:Rect width="100%" height="100%">
		<s:fill><s:SolidColor color="0xFF0000" /></s:fill>
	</s:Rect>
	-->
	
	<fx:Script>
		<![CDATA[
			import spark.components.Image;
			
			import org.common.interfaces.IPlayerStatusModule;
			
			public function onPreInitialize():void
			{
				setName("New Name!");
				setXP(100);
				setTitle("New Title!");
				psvRect.setColor(0xff0000);
			}
			
			public function setPicture(image:Image):void
			{
				//playerImage.imageDisplay = image;
			}
			
			public function setName(name:String):void
			{
				playerName.text = name;
			}
			
			public function setXP(xp:int):void
			{
				playerXP.text = xp + " XP";
			}
			
			public function setTitle(title:String):void
			{
				playerTitle.text = title;
			}
		]]>
	</fx:Script>
	
	<base:FillRect id="psvRect"/>
	<s:HGroup width="100%"
			  height="100%">
		<s:VGroup id="playerInfo"
				  width="100%"
				  height="100%">
			<s:HGroup width="100%"
					  height="100%">
				<s:Image id="playerImage" source="@Embed(source='playerIcon.jpg')"
						 width="100%"
						 height="100%"/>
				<s:VGroup width="100%"
						  height="100%">
					<s:Label id="playerName"
							 text="Player Name"
							 color="#FFFFFF"/>
					<s:Label id="playerXP"
							 text="Player XP Bar"
							 color="#FFFFFF"/>
				</s:VGroup>
			</s:HGroup>
			<s:Label id="playerTitle"
					 text="Player Title"
					 color="#FFFFFF"/>
		</s:VGroup>
		<s:Button id="playerSkill"
				  label="Player Skill"/>
	</s:HGroup>
</s:Group>
